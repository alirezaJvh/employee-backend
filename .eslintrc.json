{
    "root": true,
    "parserOptions": {
         "ecmaVersion": 12,
         "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier", "plugin:prettier/recommended"],
    "env": { 
         "es2021": true,
         "node": true
    },
    "plugins": ["prettier"],
    "rules": {
     // "prettier/prettier": 1
         "no-console": "error"
    },
    "eslint.validate": [ "javascript", "javascriptreact", "html", "typescriptreact" ]
}